#include <iostream>
#include <cmath>

using namespace std;

// Вводные для Alice
long int startcap_Alice = 1000000;
long int vznos_ipoteka = 1000000;
float stavka_ipoteka = 1.22;
long int another_trati_Alice = 35000;
long int kvartira_Alice = 8000000;
long int zp_Alice = 200000;
float account_Alice = 0;

// Время и исходные данные
float month_year = 9;
int year = 2024;
float inflation = 1.09;

// Вводные для Bob
long int kvartira_Bob = 25000;
long int another_trati_Bob = 30000;
long int zp_Bob = 200000;
long int vklad_Bob = 1000000;
float stavka_vklad = 1.20;
float account_Bob = 0;

// Function to increment the year if month exceeds 12
void next_year() {
    if (month_year == 13) {
        year++;
        month_year = 1;
    }
}

// Function to simulate monthly payments for Alice
void pay_month_Alice() {
    while (year <= 2054) {
        account_Alice += zp_Alice;
        account_Alice -= another_trati_Alice + vznos_ipoteka;
        month_year++;
        next_year();
    }
}

// Function to apply inflation adjustments for Alice
void inflation_Alice() {
    zp_Alice = static_cast<long int>(zp_Alice * 1.07);
    another_trati_Alice = static_cast<long int>(another_trati_Alice * 1.09);
    kvartira_Alice = static_cast<long int>(kvartira_Alice * 1.08);
}

int main() {
    // Example usage of the functions
    pay_month_Alice();
    inflation_Alice();

    // Output the final account balance for Alice
    cout << "Остаток у Alice " << account_Alice << endl;

    return 0;
}
