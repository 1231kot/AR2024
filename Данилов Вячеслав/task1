#include <stdio.h>
#include <math.h>

// Global variables
long int startcap_Alice = 1000000;
long int vznos_ipoteka = 1000000;
float stavka_ipoteka = 1.22;
long int another_trati_Alice = 35000;
long int kvartira_Alice = 8000000;
long int zp_Alice = 200000;
float account_Alice = 0;

float month_year = 9;
int year = 2024;
float inflation = 1.09;

long int kvartira_Bob = 25000;
long int another_trati_Bob = 30000;
long int zp_Bob = 200000;
long int vklad_Bob = 1000000;
float stavka_vklad = 1.20;
float account_Bob = 0;

// Function prototypes
void next_year();
void pay_month_Alice();
void inflation_Alice();
void pay_month_Bob();
void inflation_Bob();

int main() {
    // Initialize Alice's account
    account_Alice = startcap_Alice;

    // Main simulation loop
    while (year <= 2054) {
        pay_month_Alice();
        pay_month_Bob();
        
        if (month_year == 1) {
            inflation_Alice();
            inflation_Bob();
        }
    }

    // Print final results
    printf("Final year: %d\n", year - 1);
    printf("Alice's final account balance: %.2f\n", account_Alice);
    printf("Bob's final account balance: %.2f\n", account_Bob);

    return 0;
}

void next_year() {
    if (month_year == 13) {
        year++;
        month_year = 1;
    }
}

void pay_month_Alice() {
    account_Alice += zp_Alice;
    account_Alice -= another_trati_Alice + vznos_ipoteka;
    month_year++;
    next_year();
}

void inflation_Alice() {
    zp_Alice *= 1.07;
    another_trati_Alice *= 1.09;
    kvartira_Alice *= 1.08;
}

void pay_month_Bob() {
    account_Bob += zp_Bob;
    account_Bob -= another_trati_Bob;
    account_Bob -= kvartira_Bob;
    
    // Apply interest to Bob's deposit
    vklad_Bob *= stavka_vklad;
    account_Bob += vklad_Bob;
}

void inflation_Bob() {
    zp_Bob *= inflation;
    another_trati_Bob *= inflation;
    kvartira_Bob *= inflation;
}
